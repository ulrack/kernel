{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "codec.schema.json",
    "type": "object",
    "properties": {
        "type": {
            "$ref": "#definitions/identifierDeclaration"
        },
        "class": {
            "$ref": "#definitions/classDeclaration"
        },
        "supportEncoding": {
            "type": "boolean",
            "default": true
        },
        "supportDecoding": {
            "type": "boolean",
            "default": true
        },
        "parameters": {
            "type": "object"
        }
    },
    "required": ["type", "class"],
    "definitions": {
        "classDeclaration": {
            "type": "string",
            "pattern": "^(\\\\[A-z]+)+$"
        },
        "identifierDeclaration": {
            "type": "string",
            "pattern": "^[\\w-]+$"
        }
    }
}
