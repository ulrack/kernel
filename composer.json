{
    "name": "ulrack/kernel",
    "description": "The kernel package for an application made with Ulrack.",
    "keywords": [
        "framework",
        "kernel"
    ],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "grizz-it/cache": "^1.1",
        "grizz-it/configuration": "^1.3",
        "grizz-it/enum": "^1.1",
        "grizz-it/json-schema": "^1.0",
        "grizz-it/services": "^1.0",
        "grizz-it/translator": "^1.2"
    },
    "authors": [
        {
            "name": "Ulrack",
            "homepage": "https://www.ulrack.com/",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ulrack\\Kernel\\": "src/"
        },
        "files": [
            "locator.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ulrack\\Kernel\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
